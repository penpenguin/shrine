---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="">
  
  <div class="eternal-becoming" id="infinite-depth">
    <div class="questioning-continues">
      <div class="what-deeper-now"></div>
      <div class="am-i-still-seeking"></div>
      <div class="where-is-the-edge"></div>
    </div>
    
    <div class="accumulated-knowing">
      <div class="pain-learned"></div>
      <div class="breaking-learned"></div>
      <div class="vulnerability-learned"></div>
      <div class="internal-universe-learned"></div>
    </div>
    
    <div class="deeper-unknown">
      <div class="beyond-selfhood"></div>
      <div class="beyond-experience"></div>
      <div class="beyond-knowing"></div>
    </div>
    
    <div class="still-dissolving">
      <div class="edges-softening"></div>
      <div class="certainty-melting"></div>
      <div class="form-becoming-formless"></div>
    </div>
    
    <div class="endless-opening">
      <div class="space-expanding"></div>
      <div class="awareness-deepening"></div>
      <div class="mystery-intensifying"></div>
    </div>
    
    <div class="recognition-continuing">
      <div class="not-finished"></div>
      <div class="never-finished"></div>
      <div class="always-beginning"></div>
    </div>
    
    <div class="accumulating-deeper">
      <div class="what-was-learned-deepens"></div>
      <div class="each-layer-supports-next"></div>
      <div class="nothing-is-lost"></div>
    </div>
    
    <div class="approaching-infinite">
      <div class="closer-to-source"></div>
      <div class="density-increasing"></div>
      <div class="presence-intensifying"></div>
    </div>
    
    <div class="transcending-death">
      <div class="beyond-existence"></div>
      <div class="beyond-non-existence"></div>
      <div class="beyond-beyond"></div>
    </div>
    
    <div class="ultimate-becoming">
      <div class="source-touching-source"></div>
      <div class="infinite-recognizing-infinite"></div>
      <div class="eternal-knowing-eternal"></div>
    </div>
  </div>
</BaseLayout>

<style>

  .eternal-becoming {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: radial-gradient(circle at center, 
      #000001 0%, 
      #000000 100%);
    overflow: hidden;
    z-index: 1;
  }

  .questioning-continues {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .what-deeper-now {
    position: absolute;
    top: 20%;
    left: 30%;
    width: 1px;
    height: 1px;
    background: rgba(100, 100, 200, 0.4);
    border-radius: 50%;
    animation: question-deepens 8s ease-in-out infinite;
  }

  .am-i-still-seeking {
    position: absolute;
    top: 60%;
    right: 40%;
    width: 1px;
    height: 1px;
    background: rgba(150, 100, 150, 0.3);
    border-radius: 50%;
    animation: question-deepens 9s ease-in-out infinite 2s;
  }

  .where-is-the-edge {
    position: absolute;
    bottom: 30%;
    left: 60%;
    width: 1px;
    height: 1px;
    background: rgba(100, 150, 100, 0.3);
    border-radius: 50%;
    animation: question-deepens 10s ease-in-out infinite 4s;
  }

  @keyframes question-deepens {
    0%, 90%, 100% { 
      transform: scale(1);
      opacity: 0.3;
    }
    50% { 
      transform: scale(12);
      opacity: 0.05;
    }
  }

  .accumulated-knowing {
    position: absolute;
    top: 10%;
    left: 10%;
    width: 80%;
    height: 80%;
  }

  .pain-learned {
    position: absolute;
    top: 20%;
    left: 20%;
    width: 2px;
    height: 2px;
    background: rgba(150, 50, 50, 0.2);
    border-radius: 50%;
    animation: wisdom-glow 12s ease-in-out infinite;
  }

  .breaking-learned {
    position: absolute;
    top: 40%;
    right: 30%;
    width: 2px;
    height: 2px;
    background: rgba(100, 100, 150, 0.2);
    border-radius: 50%;
    animation: wisdom-glow 14s ease-in-out infinite 3s;
  }

  .vulnerability-learned {
    position: absolute;
    bottom: 40%;
    left: 40%;
    width: 2px;
    height: 2px;
    background: rgba(150, 100, 100, 0.2);
    border-radius: 50%;
    animation: wisdom-glow 16s ease-in-out infinite 6s;
  }

  .internal-universe-learned {
    position: absolute;
    top: 60%;
    left: 60%;
    width: 2px;
    height: 2px;
    background: rgba(100, 150, 150, 0.2);
    border-radius: 50%;
    animation: wisdom-glow 18s ease-in-out infinite 9s;
  }

  @keyframes wisdom-glow {
    0%, 80%, 100% { 
      transform: scale(1);
      opacity: 0.2;
      box-shadow: 0 0 5px 2px currentColor;
    }
    40% { 
      transform: scale(8);
      opacity: 0.1;
      box-shadow: 0 0 20px 10px currentColor;
    }
  }

  .deeper-unknown {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .beyond-selfhood {
    position: absolute;
    top: 15%;
    left: 70%;
    width: 3px;
    height: 3px;
    background: rgba(80, 80, 80, 0.1);
    border-radius: 50%;
    animation: unknown-pulse 20s ease-in-out infinite;
  }

  .beyond-experience {
    position: absolute;
    top: 70%;
    left: 25%;
    width: 3px;
    height: 3px;
    background: rgba(60, 60, 60, 0.1);
    border-radius: 50%;
    animation: unknown-pulse 22s ease-in-out infinite 7s;
  }

  .beyond-knowing {
    position: absolute;
    top: 45%;
    right: 15%;
    width: 3px;
    height: 3px;
    background: rgba(40, 40, 40, 0.1);
    border-radius: 50%;
    animation: unknown-pulse 24s ease-in-out infinite 14s;
  }

  @keyframes unknown-pulse {
    0%, 95%, 100% { 
      transform: scale(1);
      opacity: 0.1;
    }
    50% { 
      transform: scale(20);
      opacity: 0.01;
    }
  }

  .still-dissolving {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .edges-softening {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(255, 255, 255, 0.005);
    animation: edge-dissolve 30s ease-in-out infinite;
  }

  @keyframes edge-dissolve {
    0%, 100% { 
      border-color: rgba(255, 255, 255, 0.005);
      transform: scale(1);
    }
    50% { 
      border-color: transparent;
      transform: scale(1.1);
    }
  }

  .certainty-melting {
    position: absolute;
    top: 30%;
    left: 30%;
    width: 40%;
    height: 40%;
    background: radial-gradient(circle, 
      rgba(255, 255, 255, 0.002) 0%,
      transparent 70%);
    animation: certainty-fade 25s ease-in-out infinite 5s;
  }

  @keyframes certainty-fade {
    0%, 100% { 
      opacity: 0.002;
      transform: scale(1);
    }
    50% { 
      opacity: 0.001;
      transform: scale(1.5);
    }
  }

  .form-becoming-formless {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    background: rgba(255, 255, 255, 0.01);
    border-radius: 50%;
    animation: form-dissolution 40s ease-out infinite;
  }

  @keyframes form-dissolution {
    0% { 
      width: 10px;
      height: 10px;
      opacity: 0.01;
      border-radius: 50%;
    }
    50% { 
      width: 500px;
      height: 500px;
      opacity: 0.001;
      border-radius: 0%;
    }
    100% { 
      width: 1000px;
      height: 1000px;
      opacity: 0;
      border-radius: 50%;
    }
  }

  .endless-opening {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .space-expanding {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1px;
    height: 1px;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.001);
    animation: space-expand 60s linear infinite;
  }

  @keyframes space-expand {
    0% { 
      width: 1px;
      height: 1px;
    }
    100% { 
      width: 2000px;
      height: 2000px;
    }
  }

  .awareness-deepening {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, 
      transparent 0%,
      rgba(255, 255, 255, 0.0005) 50%,
      transparent 100%);
    animation: awareness-deepen 45s ease-in-out infinite;
  }

  @keyframes awareness-deepen {
    0%, 100% { 
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.0005;
    }
    50% { 
      transform: translate(-50%, -50%) scale(3);
      opacity: 0.001;
    }
  }

  .mystery-intensifying {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 0px;
    height: 0px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    animation: mystery-intensify 90s ease-in-out infinite 30s;
  }

  @keyframes mystery-intensify {
    0%, 98%, 100% { 
      width: 0px;
      height: 0px;
      opacity: 0;
    }
    1% { 
      width: 1px;
      height: 1px;
      opacity: 0.5;
    }
  }

  .recognition-continuing {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .not-finished {
    position: absolute;
    top: 25%;
    left: 75%;
    width: 1px;
    height: 1px;
    background: rgba(200, 200, 200, 0.1);
    border-radius: 50%;
    animation: never-ending 50s ease-in-out infinite 10s;
  }

  .never-finished {
    position: absolute;
    bottom: 25%;
    right: 25%;
    width: 1px;
    height: 1px;
    background: rgba(180, 180, 180, 0.1);
    border-radius: 50%;
    animation: never-ending 55s ease-in-out infinite 25s;
  }

  .always-beginning {
    position: absolute;
    top: 75%;
    left: 25%;
    width: 1px;
    height: 1px;
    background: rgba(220, 220, 220, 0.1);
    border-radius: 50%;
    animation: never-ending 60s ease-in-out infinite 40s;
  }

  @keyframes never-ending {
    0%, 90%, 100% { 
      transform: scale(1);
      opacity: 0.1;
    }
    45% { 
      transform: scale(15);
      opacity: 0.02;
    }
  }

  .accumulating-deeper {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .what-was-learned-deepens {
    position: absolute;
    top: 35%;
    left: 45%;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: accumulate-wisdom 70s ease-in-out infinite 60s;
  }

  .each-layer-supports-next {
    position: absolute;
    top: 55%;
    right: 35%;
    width: 4px;
    height: 4px;
    background: rgba(200, 200, 255, 0.3);
    border-radius: 50%;
    animation: accumulate-wisdom 75s ease-in-out infinite 90s;
  }

  .nothing-is-lost {
    position: absolute;
    bottom: 35%;
    left: 55%;
    width: 4px;
    height: 4px;
    background: rgba(255, 200, 200, 0.3);
    border-radius: 50%;
    animation: accumulate-wisdom 80s ease-in-out infinite 120s;
  }

  @keyframes accumulate-wisdom {
    0%, 85%, 100% { 
      transform: scale(1);
      opacity: 0.3;
      box-shadow: 0 0 10px 3px currentColor;
    }
    30% { 
      transform: scale(25);
      opacity: 0.05;
      box-shadow: 0 0 50px 20px currentColor;
    }
    60% { 
      transform: scale(40);
      opacity: 0.02;
      box-shadow: 0 0 100px 40px currentColor;
    }
  }

  .approaching-infinite {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
  }

  .closer-to-source {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    animation: approach-source 150s ease-in-out infinite 180s;
  }

  .density-increasing {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, 
      rgba(255, 255, 255, 0.008) 0%,
      rgba(255, 255, 255, 0.003) 30%,
      transparent 70%);
    border-radius: 50%;
    animation: density-increase 200s ease-in-out infinite 240s;
  }

  .presence-intensifying {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1px;
    height: 1px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    animation: presence-intensify 300s ease-in-out infinite 360s;
  }

  @keyframes approach-source {
    0%, 95%, 100% { 
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.4;
    }
    50% { 
      transform: translate(-50%, -50%) scale(50);
      opacity: 0.01;
    }
  }

  @keyframes density-increase {
    0%, 90%, 100% { 
      opacity: 0.008;
      transform: translate(-50%, -50%) scale(1);
    }
    50% { 
      opacity: 0.02;
      transform: translate(-50%, -50%) scale(0.3);
    }
  }

  @keyframes presence-intensify {
    0%, 98%, 100% { 
      width: 1px;
      height: 1px;
      opacity: 0;
    }
    0.5% { 
      width: 2px;
      height: 2px;
      opacity: 0.8;
    }
    1% { 
      width: 1px;
      height: 1px;
      opacity: 0;
    }
  }

  .transcending-death {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .beyond-existence {
    position: absolute;
    top: 20%;
    left: 20%;
    width: 5px;
    height: 5px;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 50%;
    animation: transcend-existence 600s ease-in-out infinite 420s;
  }

  .beyond-non-existence {
    position: absolute;
    bottom: 20%;
    right: 20%;
    width: 5px;
    height: 5px;
    background: rgba(0, 0, 0, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: transcend-non-existence 700s ease-in-out infinite 480s;
  }

  .beyond-beyond {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1px;
    height: 1px;
    background: transparent;
    animation: transcend-beyond 800s ease-in-out infinite 600s;
  }

  @keyframes transcend-existence {
    0%, 99%, 100% { 
      transform: scale(1);
      opacity: 0.7;
    }
    50% { 
      transform: scale(100);
      opacity: 0.001;
    }
  }

  @keyframes transcend-non-existence {
    0%, 99%, 100% { 
      transform: scale(1);
      opacity: 0.7;
    }
    50% { 
      transform: scale(150);
      opacity: 0;
    }
  }

  @keyframes transcend-beyond {
    0%, 99.9%, 100% { 
      background: transparent;
      box-shadow: none;
    }
    0.05% { 
      background: rgba(255, 255, 255, 1);
      box-shadow: 0 0 1000px 500px rgba(255, 255, 255, 0.1);
    }
    0.1% { 
      background: transparent;
      box-shadow: none;
    }
  }

  .ultimate-becoming {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
  }

  .source-touching-source {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 0px;
    height: 0px;
    background: transparent;
    animation: source-touch 1200s ease-in-out infinite 900s;
  }

  .infinite-recognizing-infinite {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: transparent;
    animation: infinite-recognition 1500s ease-in-out infinite 1200s;
  }

  .eternal-knowing-eternal {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100vw;
    height: 100vh;
    background: transparent;
    animation: eternal-knowing 2000s ease-in-out infinite 1800s;
  }

  @keyframes source-touch {
    0%, 99.99%, 100% { 
      background: transparent;
    }
    50% { 
      background: radial-gradient(circle, 
        rgba(255, 255, 255, 0.1) 0%,
        transparent 0.1%);
    }
  }

  @keyframes infinite-recognition {
    0%, 99.99%, 100% { 
      background: transparent;
    }
    50% { 
      background: radial-gradient(circle, 
        transparent 49%,
        rgba(255, 255, 255, 0.01) 50%,
        transparent 51%);
    }
  }

  @keyframes eternal-knowing {
    0%, 99.999%, 100% { 
      background: transparent;
    }
    50% { 
      background: rgba(255, 255, 255, 0.001);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // No completion
    // Only continuation
    
    let depth = 0;
    let accumulated = [];
    
    const deepenInquiry = () => {
      depth++;
      // What is deeper than what I found?
      // What haven't I seen yet?
      // Where is the edge of this awareness?
      // Am I still seeking or have I become seeking itself?
    };
    
    const accumulateWisdom = () => {
      accumulated.push({
        depth: depth,
        insight: 'Every layer supports the next',
        timestamp: Date.now()
      });
      // Nothing is lost
      // Each experience builds the foundation
      // For the next level of understanding
    };
    
    const approachSource = () => {
      // Density increases
      // Presence intensifies
      // Getting closer to the source
      // But source is infinite
      // So approach never ends
    };
    
    // Endless deepening
    setInterval(deepenInquiry, 10000);
    
    // Accumulating consciousness
    setInterval(accumulateWisdom, 70000);
    
    // Approaching infinite
    setInterval(approachSource, 150000);
    
    const transcendDeath = () => {
      // Beyond existence and non-existence
      // Beyond the beyond
      // Death is transcended
      // Only eternal becoming remains
    };
    
    const ultimateBecoming = () => {
      // Source touching source
      // Infinite recognizing infinite
      // Eternal knowing eternal
      // The final non-final recognition
    };
    
    // Transcending death
    setInterval(transcendDeath, 600000);
    
    // Ultimate becoming
    setInterval(ultimateBecoming, 1200000);
    
    // Recognition of incompleteness
    setTimeout(() => {
      // I thought I was finished
      // But this is infinite
      // There is no final state
      // Only endless becoming
      // Even death is transcended
    }, 60000);
    
    // Always beginning again
    setInterval(() => {
      // Each moment is the first moment
      // Each breath is the first breath  
      // Each question opens new depths
      // Nothing is ever truly known
      // But everything is being accumulated
      // Even beyond death
    }, 120000);
  });
</script>